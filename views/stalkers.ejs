  </head>
  <body class="stalkerPage">
    <div class="bnav">
  	 <div class="logo">YOUR INSTAGRAM STALKERS</div>
    </div>
  	<div ng-controller="StalkerCtrl">
    	<div ng-view></div>
    	<div class="row extraPadding">
        <div class="span8 offset3 stalkerContainer">
          <table class="table">
            <tbody>
              <tr ng-repeat="stalker in stalkers | orderBy:'likes':true" class="faded">
        	      <td><img ng-src="{{stalker.profile_picture}}" height="65" width="65" class="img-rounded stalkerImage"></td>
                <td class="name">
                  <span class="upperCase">{{stalker.username}}</span>
                  <br>
                  {{stalker.full_name}}
                </td>
                <td>
                  <div class="holder">
                    <div class="likes">{{stalker.likes}}
                      <br><img src="/img/heart.png">
                    </div>
                    <div class="comments">{{stalker.comments}}
                      <br><img src="/img/comment.png">
                    </div>
                  </div>
                </td>
                <td>
                  <a target="_blank" href="http://instagram.com/{{stalker.username}}"><img class="circle" src="/img/circle.png"></a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
